@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<WebDatVePhim.Models.BapNuoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý bắp nước</h2>

<p>
    @Html.ActionLink("Thêm mới", "ThemMoi")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().id_BapNuoc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().tenBapNuoc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().chiTietBapNuoc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().giaTien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().hinhAnh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_BapNuoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tenBapNuoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.chiTietBapNuoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.giaTien)
            </td>
            <td>
                <div id="hinhAnh"><img src="@Url.Content("~/img/"+item.hinhAnh)" width="150" height="150" /></div>
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { @IdBapNuoc = item.id_BapNuoc }) |
                @Html.ActionLink("Hiển thị", "HienThi", new { @IdBapNuoc = item.id_BapNuoc }) |
                @Html.ActionLink("Xóa", "XoaPhim", new { @IdBapNuoc = item.id_BapNuoc })
            </td>
        </tr>
    }

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>

<style>
    .MenuTrang li {
        display: inline;
        font-size: 20px;
    }

    ul.pagination {
        justify-content: center;
    }
</style>