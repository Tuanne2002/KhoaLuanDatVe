@model WebDatVePhim.Controllers.QuanLyVeController.RevenueViewModel
<div>
    <h3>Doanh thu ngày @Model.SelectedDate.ToString("dd/MM/yyyy")</h3>
    <p style="font-size:20px">
        Tổng số ghế đã đặt: @Model.TotalGheCount <br />
        Tổng số lượng bắp nước đã bán: @Model.TotalBapNuocCount <br />
        Tổng số tiền từ bắp nước: @Model.TotalPopcornRevenue.ToString("#,###") VND <br />
        Tổng số khuyến mãi đã áp dụng: @Model.TotalKhuyenMaiCount <br />
        Tổng doanh thu : @Model.TotalRevenue.ToString("#,###") VND
    </p>
</div>
