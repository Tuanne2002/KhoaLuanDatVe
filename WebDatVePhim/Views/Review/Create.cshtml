@model WebDatVePhim.Models.BinhLuan

<div class="comment-section">
    <div class="comment-form">
        @using (Html.BeginForm("Create", "Review", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.PhimId)
            <label for="comment">Nhận xét:</label>
            @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", rows = 4 })

            <label for="rating">Đánh giá:</label>
            @Html.TextBoxFor(model => model.Rating, new { @class = "form-control" })

            <button type="submit">Gửi</button>
        }
    </div>

    <div class="comments-list">
        <!-- Hiển thị danh sách bình luận -->
    </div>
</div>
