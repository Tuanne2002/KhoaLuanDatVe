@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<WebDatVePhim.Models.Rap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý rạp</h2>

<p>
    @Html.ActionLink("Thêm mới", "ThemMoi")
</p>
<table class="table">
    <tr>
        <th>
            ID rạp
        </th>
        <th>
            Loại rạp
        </th>
        <th>
            Tên rạp
        </th>
        <th>
            Địa chỉ 
        </th>
        <th>
            Số điện thoại 
        </th>
        <th>
            Email
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.First().hinhAnh)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_Rap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiRap.tenLoaiRap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tenRap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diaChiRap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sdtRap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.emailRap)
            </td>
            @*<td>
                    <div id="hinhAnh"><img src="@Url.Content("~/img/"+item.hinhAnh)" width="30" height="30" /></div>
                </td>*@
            <td>
                @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { @IdRap = item.id_Rap }) |
                @Html.ActionLink("Hiển thị", "HienThi", new { @IdRap = item.id_Rap }) |
                @Html.ActionLink("Xóa", "XoaPhim", new { @IdRap = item.id_Rap })
            </td>
        </tr>
    }

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>

<style>
    .MenuTrang li {
        display: inline;
        font-size: 20px;
    }

    ul.pagination {
        justify-content: center;
    }
</style>