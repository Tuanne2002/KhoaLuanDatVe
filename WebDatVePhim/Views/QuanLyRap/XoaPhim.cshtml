@model WebDatVePhim.Models.Rap

@{
    ViewBag.Title = "XoaPhim";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Xóa rạp</h2>

<div>
    <h4>Rạp</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID rạp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id_Rap)
        </dd>

        <dt>
            Loại rạp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id_loaiRap)
        </dd>
        <dt>
            Tên rạp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tenRap)
        </dd>

        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.diaChiRap)
        </dd>

        <dt>
            Số điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sdtRap)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.emailRap)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại trang quản lý rạp", "Index")
        </div>
    }
</div>
