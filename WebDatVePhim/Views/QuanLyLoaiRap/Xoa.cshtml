@model WebDatVePhim.Models.LoaiRap

@{
    ViewBag.Title = "Xoa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Xóa</h2>

<div>
    <h4>Loại rạp</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID loại rạp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id_loaiRap)
        </dd>

        <dt>
            Tên loại rạp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tenLoaiRap)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            <div id="hinhAnh"><img src="@Url.Content("~/img/"+Model.hinhAnh)" width="150" height="150" /></div>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại trang quản lý loại rạp", "Index")
        </div>
    }
</div>
