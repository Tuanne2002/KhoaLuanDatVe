@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<WebDatVePhim.Models.LoaiRap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý loại rạp</h2>

<p>
    @Html.ActionLink("Thêm mới", "ThemMoi")
</p>
<table class="table">
    <tr>
        <th>
            ID loại rạp
        </th>
        <th>
            Tên loại rạp
        </th>
        <th>
            Hình Ảnh
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_loaiRap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tenLoaiRap)
            </td>
            <td>
                <div id="hinhAnh"><img src="@Url.Content("~/img/"+item.hinhAnh)" width="150" height="150" /></div>
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { @IdLoaiRap = item.id_loaiRap }) |
                @Html.ActionLink("Hiển thị", "HienThi", new { @IdLoaiRap = item.id_loaiRap }) |
                @Html.ActionLink("Xóa", "Xoa", new { @IdLoaiRap = item.id_loaiRap })
            </td>
        </tr>
    }

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>

<style>
    .MenuTrang li {
        display: inline;
        font-size: 20px;
    }

    ul.pagination {
        justify-content: center;
    }
</style>