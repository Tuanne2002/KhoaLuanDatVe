@model WebDatVePhim.Models.Phim

@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thêm mới</h2>
@*Thêm thuộc tính cho form để upload ảnh*@
