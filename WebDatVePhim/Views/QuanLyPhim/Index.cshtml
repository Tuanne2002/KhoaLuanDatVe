@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<WebDatVePhim.Models.Phim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý phim</h2>

<p>
    @Html.ActionLink("Thêm phim mới", "ThemMoi")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().id_Phim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().tenPhim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ngayKhoiChieu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().thoiLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().theLoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().tomTatPhim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().anhPhim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().daoDien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().danhGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().quocGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().trailer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().dienVien)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        Console.WriteLine(item);
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_Phim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tenPhim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngayKhoiChieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.thoiLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.theLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tomTatPhim)
            </td>
            <td>
                <div id=" AnhBia"><img src="@Url.Content("~/img/"+item.anhPhim)" width="150" height="150" /></div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.daoDien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.danhGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quocGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trailer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dienVien)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { @IdPhim = item.id_Phim }) |
                @Html.ActionLink("Hiển thị", "HienThi", new { @IdPhim = item.id_Phim }) |
                @Html.ActionLink("Xóa", "XoaPhim", new { @IdPhim = item.id_Phim })
            </td>
        </tr>
    }

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>

<style>
    .MenuTrang li {
        display: inline;
    }
</style>